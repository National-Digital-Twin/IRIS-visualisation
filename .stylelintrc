{
    "extends": ["stylelint-config-recommended-scss", "stylelint-config-clean-order"],
    "rules": {
        "at-rule-no-unknown": null,
        "color-hex-length": "long",
        "custom-property-empty-line-before": ["never", { "except": ["after-comment"] }],
        "selector-pseudo-element-no-unknown": [true, { "ignorePseudoElements": ["ng-deep"] }],
        
        "scss/at-rule-no-unknown": true,

        "order/order": ["custom-properties", "dollar-variables", "declarations", "at-rules", "rules"]
    }
}
